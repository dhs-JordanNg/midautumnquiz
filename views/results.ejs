<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Mid Autumn Festival Quiz</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; background-color: #990000;}
    </style>
</head>
<body>
<div class="container">

    <div class="jumbotron text-center">
        <h1><span class="fa fa-lock"></span> Node Authentication</h1>	
		<h2>Quiz Resutls</h2>
		<% questions.forEach(function(element) { %>
			<div> <%= element.question%> </div>
			<div>
				<p> Your answer was <%= responses[element.questionId - 1] %> </p>
				<p> The correct answer was <%= element.answer%> </p>
				<% if (responses[element.questionId - 1] == element.answer) { %>
					<% score++; %>
					<p> You were correct! </p>
					<% } else { %>
					<p> You were wrong! </p>
					<% } %>
			</div>
			<% }) %>
		<div id="score"> Score: <%= score %>/<%= questions.length%> </div>
		<a href="/profile" class="btn btn-default btn-sm">Return</a>	
        
    </div>

</div>
</body>
</html>